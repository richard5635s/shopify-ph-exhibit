<div class="mt-spacer {{ block.settings.text_color }}" style="--spacing-adjust: {{ block.settings.space_above }};" {{ block.shopify_attributes }}>
  <p class="flex items-center justify-start break-words gap-2">
    {%- if block.settings.icon != 'none' -%}
    <span class="block w-4 h-4 shrink-0">
      {%- render 'content-icon', icon: block.settings.icon -%}
    </span>
    {%- endif -%}
    {{- block.settings.text | escape | strip -}}
  </p>
</div>