{%- if predictive_search.performed -%}
  {%- liquid
    assign has_suggestions = false
    assign has_product_results = false
    assign has_collection_results = false
    assign has_article_results = false
    assign has_page_results = false

    if predictive_search.resources.queries.size > 0
      assign has_suggestions = true
    endif

    if predictive_search.resources.products.size > 0
      assign has_product_results = true
    endif

    if predictive_search.resources.collections.size > 0
      assign has_collection_results = true
    endif

    if predictive_search.resources.articles.size > 0
      assign has_article_results = true
    endif

    if predictive_search.resources.pages.size > 0
      assign has_page_results = true
    endif

    assign group_results = false
    assign has_results = false

    if has_product_results
      assign has_results = true
    endif

    if has_collection_results or has_article_results or has_page_results
      assign has_results = true
      assign group_results = true
    endif

    # Calculate sizes

    assign desktop_product_sizes = 'calc(min(24rem, 92vw) / 3)'

    assign mobile_product_sizes = 'calc(92vw / 3)'

    assign product_sizes = '(min-width: 990px) ' | append: desktop_product_sizes | append: ', ' | append: mobile_product_sizes

    assign desktop_collection_sizes = 'calc(min(24rem, 92vw) / 2)'

    assign mobile_collection_sizes = 'calc(92vw / 2)'

    assign collection_sizes = '(min-width: 990px) ' | append: desktop_collection_sizes | append: ', ' | append: mobile_collection_sizes

    assign desktop_article_sizes = 'calc((min(24rem, 92vw) / 7) * 2)'

    assign mobile_article_sizes = 'calc((92vw / 7) * 2)'

    assign article_sizes = '(min-width: 990px) ' | append: desktop_article_sizes | append: ', ' | append: mobile_article_sizes
  -%}

  <div id="predictive-search-results">
    {% if has_suggestions %}
      <div class="mt-3 {% if group_results %}mb-6 {% else %}mb-3 {% endif %} px-1.5 lg:px-4">
        <ul
          id="predictive-search-results-queries-list"
          role="listbox"
        >
          {% for query in predictive_search.resources.queries %}
            <li
              id="predictive-search-option-queries-{{ forloop.index }}"
              role="option"
              class="px-1 py-0.5"
              :aria-selected="isSelected"
            >
              <a class="block" href="{{ query.url }}">
                <div
                  class="[&_mark]:bg-scheme-text/10 [&_mark]:text-scheme-text"
                  aria-label="{{ query.text }}"
                >
                  {{ query.styled_text }}
                </div>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    {% if group_results %}
      <nav class="mt-3 px-1.5 lg:px-4">
        <fieldset class="w-full flex -mx-2" x-ref="groupToggles">
          {% if has_product_results %}
            <div class="label-only-input relative mx-2">
              <input
                class="absolute top-0 left-0 w-full h-full opacity-0 peer"
                type="radio"
                id="predictive-search-results-group-products"
                name="predictive-search-results-group"
                value="products"
                x-model="currentResultsGroup"
              >
              <label
                for="predictive-search-results-group-products"
                class="px-1 cursor-pointer relative block opacity-30 peer-checked:opacity-100 transition-opacity"
              >
                {{ 'general.search.products' | t }}
                ({{ predictive_search.resources.products.size }})
              </label>
            </div>
          {% endif %}

          {% if has_collection_results %}
            <div class="label-only-input relative mx-2">
              <input
                class="absolute top-0 left-0 w-full h-full opacity-0 peer"
                type="radio"
                id="predictive-search-results-group-collections"
                name="predictive-search-results-group"
                value="collections"
                x-model="currentResultsGroup"
              >
              <label
                for="predictive-search-results-group-collections"
                class="px-1 cursor-pointer relative block opacity-30 peer-checked:opacity-100 transition-opacity"
              >
                {{ 'general.search.collections' | t }}
                ({{ predictive_search.resources.collections.size }})
              </label>
            </div>
          {% endif %}

          {% if has_article_results %}
            <div class="label-only-input relative mx-2">
              <input
                class="absolute top-0 left-0 w-full h-full opacity-0 peer"
                type="radio"
                id="predictive-search-results-group-articles"
                name="predictive-search-results-group"
                value="articles"
                x-model="currentResultsGroup"
              >
              <label
                for="predictive-search-results-group-articles"
                class="px-1 cursor-pointer relative block opacity-30 peer-checked:opacity-100 transition-opacity"
              >
                {{ 'general.search.articles' | t }}
                ({{ predictive_search.resources.articles.size }})
              </label>
            </div>
          {% endif %}

          {% if has_page_results %}
            <div class="label-only-input relative mx-2">
              <input
                class="label-only-input absolute top-0 left-0 w-full h-full opacity-0 peer"
                type="radio"
                id="predictive-search-results-group-pages"
                name="predictive-search-results-group"
                value="pages"
                x-model="currentResultsGroup"
              >
              <label
                for="predictive-search-results-group-pages"
                class="px-1 cursor-pointer relative block opacity-30 peer-checked:opacity-100 transition-opacity"
              >
                {{ 'general.search.pages' | t }}
                ({{ predictive_search.resources.pages.size }})
              </label>
            </div>
          {% endif %}
        </fieldset>
      </nav>
    {% endif %}

    <div class="relative overflow-hidden px-1.5 lg:px-4">
      {% if has_product_results %}
        <div
          x-ref="productsResults"
          hidden
        >
          <ul
            id="predictive-search-results-list"
            class="mt-4 pb-4 grid grid-cols-3 gap-x-2 gap-y-2"
            role="listbox"
            data-results-group="products"
            aria-labelledby="predictive-search-products"
          >
            {%- comment %}<locksmith:b993>{% endcomment -%}
              {%- assign locksmith_d672_forloop__size = 0 %}{%- for product in predictive_search.resources.products -%}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: predictive_search.resources, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_d672_forloop__size = locksmith_d672_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_d672_forloop__index = nil -%}
            {%- comment %}</locksmith:b993>{% endcomment -%}
            {%- for product in predictive_search.resources.products -%}
              {%- comment %}<locksmith:bcf3>{% endcomment -%}
                {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: predictive_search.resources, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_d672_forloop__index == nil %}{% assign locksmith_d672_forloop__index = 1 %}{% assign locksmith_d672_forloop__index0 = 0 %}{% else %}{% assign locksmith_d672_forloop__index = locksmith_d672_forloop__index | plus: 1 %}{% assign locksmith_d672_forloop__index0 = locksmith_d672_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_d672_forloop__index == 1 %}{% assign locksmith_d672_forloop__first = true %}{% else %}{% assign locksmith_d672_forloop__first = false %}{% endif %}{% if locksmith_d672_forloop__index == locksmith_d672_forloop__size %}{% assign locksmith_d672_forloop__last = true %}{% else %}{% assign locksmith_d672_forloop__last = false %}{% endif %}{% assign locksmith_d672_forloop__rindex = locksmith_d672_forloop__size | minus: locksmith_d672_forloop__index | minus: 1 %}{% assign locksmith_d672_forloop__rindex0 = locksmith_d672_forloop__size | minus: locksmith_d672_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
              {%- comment %}</locksmith:bcf3>{% endcomment -%}
              <li
                id="predictive-search-option-{{ locksmith_d672_forloop__index }}"
                class="relative px-1 py-1"
                role="option"
                :aria-selected="isSelected"
              >
                {% render 'tile-product',
                  product: product,
                  tag: 'div',
                  sizes: product_sizes
                %}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {% endif %}

      {% if has_collection_results %}
        <div
          x-ref="collectionsResults"
          hidden
        >
          <ul
            id="predictive-search-results-collections-list"
            class="mt-5 pb-5 grid grid-cols-2 gap-3"
            data-results-group="collections"
            role="listbox"
          >
            {%- comment %}<locksmith:5d5d>{% endcomment -%}
              {%- assign locksmith_593f_forloop__size = 0 %}{%- for collection in predictive_search.resources.collections -%}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: collection, subject_parent: predictive_search.resources, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_593f_forloop__size = locksmith_593f_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_593f_forloop__index = nil -%}
            {%- comment %}</locksmith:5d5d>{% endcomment -%}
            {%- for collection in predictive_search.resources.collections -%}
              {%- comment %}<locksmith:ba23>{% endcomment -%}
                {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: collection, subject_parent: predictive_search.resources, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_593f_forloop__index == nil %}{% assign locksmith_593f_forloop__index = 1 %}{% assign locksmith_593f_forloop__index0 = 0 %}{% else %}{% assign locksmith_593f_forloop__index = locksmith_593f_forloop__index | plus: 1 %}{% assign locksmith_593f_forloop__index0 = locksmith_593f_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_593f_forloop__index == 1 %}{% assign locksmith_593f_forloop__first = true %}{% else %}{% assign locksmith_593f_forloop__first = false %}{% endif %}{% if locksmith_593f_forloop__index == locksmith_593f_forloop__size %}{% assign locksmith_593f_forloop__last = true %}{% else %}{% assign locksmith_593f_forloop__last = false %}{% endif %}{% assign locksmith_593f_forloop__rindex = locksmith_593f_forloop__size | minus: locksmith_593f_forloop__index | minus: 1 %}{% assign locksmith_593f_forloop__rindex0 = locksmith_593f_forloop__size | minus: locksmith_593f_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
              {%- comment %}</locksmith:ba23>{% endcomment -%}
              {%- assign image = collection.image
                | default: collection.products.first.featured_image
              -%}
              <li
                id="predictive-search-option-collections-{{ locksmith_593f_forloop__index }}"
                class="relative px-1 py-1"
                role="option"
                :aria-selected="isSelected"
              >
                <a href="{{ collection.url }}" class="absolute inset-0 z-10"
                  ><span class="sr-only">{{ collection.title }}</span></a
                >
                {%- if image != blank -%}
                  <div class="image-wrapper image-wrapper-{{ crop | default: 'none' }}">
                    {{
                      image
                      | image_url: width: 700
                      | image_tag: sizes: collection_sizes
                    }}
                  </div>
                {%- endif -%}
                <div class="mt-2 text-center">
                  <h3 class="text-sm break-words">
                    {{ collection.title }}
                  </h3>
                </div>
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {% endif %}

      {% if has_article_results %}
        <div
          x-ref="articlesResults"
          hidden
        >
          <ul
            id="predictive-search-results-articles-list"
            class="mt-5 pb-5"
            data-results-group="articles"
            role="listbox"
          >
            {%- for article in predictive_search.resources.articles -%}
              <li
                id="predictive-search-option-articles-{{ forloop.index }}"
                class="relative px-1 py-1 my-1"
                role="option"
                :aria-selected="isSelected"
              >
                <a class="grid grid-cols-7 gap-5" href="{{ article.url }}">
                  {%- if article.image != blank -%}
                    <div class="image-wrapper image-wrapper-{{ crop | default: 'none' }} col-span-2">
                      {{
                        article.image
                        | image_url: width: 700
                        | image_tag: sizes: article_sizes
                      }}
                    </div>
                  {%- endif -%}
                  <div class="col-span-5 text-left flex">
                    <h3 class="text-theme-base break-words my-auto">
                      {{ article.title }}
                    </h3>
                  </div>
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {% endif %}

      {% if has_page_results %}
        <div
          x-ref="pagesResults"
          hidden
        >
          <ul
            id="predictive-search-results-pages-list"
            class="mt-5 pb-5 grid gap-5 lg:gap-10"
            data-results-group="pages"
            role="listbox"
          >
            {%- for page in predictive_search.resources.pages -%}
              <li
                id="predictive-search-option-pages-{{ forloop.index }}"
                class="px-1 py-1 my-1 relative"
                role="option"
                :aria-selected="isSelected"
              >
                <a class="absolute inset-0 z-10" href="{{ page.url }}"
                  ><span class="sr-only">{{- page.title -}}</span></a
                >
                <div class="my-1 text-left">
                  <h3 class="text-theme-base break-words">
                    {{ page.title }}
                  </h3>
                </div>
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>

  {%- unless has_results -%}
    <div class="py-8 px-2.5 lg:px-5">
      <p>
        {{ 'general.search.no_results' | t: terms: predictive_search.terms }}
      </p>
    </div>
  {%- endunless -%}

  <span class="hidden" id="predictive-search-count">
    {%- if search.results_count == 0 -%}
      {{- 'general.search.no_results' | t: terms: predictive_search.terms -}}
    {%- else -%}
      {{-
        'general.search.results_with_count'
        | t:
          terms: predictive_search.terms,
          count: predictive_search.resources.products.size
      -}}
    {%- endif -%}
  </span>
{%- endif -%}
