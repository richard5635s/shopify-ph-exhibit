{%- liquid
  assign section_color = section.settings.color_scheme
-%}

<section class="section-container" data-color-scheme="{{ section_color }}" style="--top-spacing-adjust: {{ section.settings.space_above }}; --bottom-spacing-adjust: {{ section.settings.space_below }};">
  <div class="text-scheme-text bg-scheme-background pt-top-section-vertical-spacing pb-bottom-section-vertical-spacing">
    <div class="wrapper">
      {%- if section.settings.show_top_border -%}
      <hr class="border-t-theme border-scheme-border mb-half-section-vertical-spacing">
      {%- endif -%}
  
      <div class="grid lg:grid-cols-12 gap-theme" {% if section.settings.title == blank %}style="--section-content-col-span: 12;"{% endif %}>
  
        {% if section.settings.title != blank %}
        <div class="lg:col-span-section-title min-w-0">
          <h2 class="font-heading text-heading-standard break-words">
            {{ section.settings.title | strip }}
          </h2>
        </div>
        {% endif %}
  
        <div class="col-span-full lg:col-end-[-1] lg:col-span-section-content flex min-w-0" style="--section-grid-cols-desktop: {{ section.settings.desktop_columns }};">
          <div class="grid lg:grid-cols-section-desktop w-full gap-theme min-w-0">
            {%- for block in section.blocks -%}
              <div class="min-w-0 break-words">
  
                
                <div class="flex justify-start items-center min-w-0 break-words">
                  {%- if block.settings.icon != 'none' -%}
                  <div class="w-5 h-5 mr-2">
                    <span class="block w-5 h-5">{%- render 'content-icon', icon: block.settings.icon -%}</span>
                  </div>
                  {%- endif -%}
                  {% if block.settings.title != blank %}
                  <h2 class="font-heading text-heading-secondary break-words">
                    {{ block.settings.title | strip }}
                  </h2>
                  {% endif %}
                </div>
                
  
                <div class="mt-4 {% if block.settings.icon != 'none' -%}pl-7{% endif %}">
                  {% if block.settings.text != blank %}
                    <div class="rte">
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}
      
                  {% if block.settings.cta_link %}
                    <div class="mt-8">
                      <a class="btn" href="{{ block.settings.cta_link }}">
                        {{ block.settings.cta_label }}
                      </a>
                    </div>
                  {% endif %}
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>  
</section>

